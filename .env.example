# ===========================================
# Smashers Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# -------------------------------------------
# Server Configuration
# -------------------------------------------
NODE_ENV=development
PORT=3000
API_KEY=your_secret_api_key_here_change_in_production

# -------------------------------------------
# Django Admin Credentials
# -------------------------------------------
# URL of Django admin panel (must include /admin)
DJANGO_URL=https://smashers.bookbot.olegb.dev/admin
# Your Django admin username
DJANGO_USERNAME=
# Your Django admin password
DJANGO_PASSWORD=

# -------------------------------------------
# PostgreSQL Database
# -------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smashers_db

# -------------------------------------------
# Google Sheets API
# -------------------------------------------
# ID of your Google Sheet (from URL: docs.google.com/spreadsheets/d/SHEET_ID/edit)
GOOGLE_SHEET_ID=
# Service Account email (from credentials JSON)
GOOGLE_SERVICE_ACCOUNT_EMAIL=
# Private key from Service Account (keep the \n characters)
GOOGLE_PRIVATE_KEY=

# -------------------------------------------
# Telegram Bot
# -------------------------------------------
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=
# Chat ID of manager to receive booking notifications
TELEGRAM_MANAGER_CHAT_ID=
# Chat ID of admin to receive system alerts (optional, defaults to manager)
TELEGRAM_ADMIN_CHAT_ID=

# -------------------------------------------
# CORS Configuration
# -------------------------------------------
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
# Time window in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=60

# -------------------------------------------
# Parser Configuration
# -------------------------------------------
# How often to run parser (in hours)
PARSE_INTERVAL_HOURS=1
# Number of retry attempts on failure
PARSE_RETRY_ATTEMPTS=5

# -------------------------------------------
# Sync Configuration
# -------------------------------------------
# How often to sync Google Sheets to DB (in minutes)
SYNC_INTERVAL_MINUTES=5
